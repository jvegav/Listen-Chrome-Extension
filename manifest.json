{
    "manifest_version": 3,
    "name": "Listen",
    "description": "Listen selected text ",
    "version": "1.0.0",
    "action": {
       "default_popup":"popup.html"
    },
    "permissions": [
      "activeTab",
      "scripting",
      "storage"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
        "128" : "icon-128.png"
    }
}
  